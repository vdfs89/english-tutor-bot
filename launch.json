{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter (Produção)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--dart-define=API_URL=https://linguaflow-kkfr.onrender.com"
            ]
        },
        {
            "name": "Flutter (Desenvolvimento)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "args": [
                "--dart-define=API_URL=http://127.0.0.1:8000"
            ]
        },
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}
